    "@fastify/rate-limit": "^10.3.0",
    "dotenv": "^16.6.1",
    "drizzle-orm": "^0.44.7",
    "fastify": "^5.6.1",
    "redis": "^5.8.2",
    "viem": "^2.38.4",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@types/node": "^22.18.6",
    "tsup": "^8.5.0",
    "tsx": "^4.20.5",
    "typescript": "^5.9.3"
  }
}
